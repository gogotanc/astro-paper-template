---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-10 pb-8">
      <h1 class="my-4 text-3xl font-semibold tracking-tight sm:my-6 sm:text-4xl">
        Tanctalk
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block text-foreground hover:opacity-70 transition-opacity"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss width={18} height={18} />
        <span class="sr-only">RSS Feed</span>
      </a>

      <p class="text-accent-secondary mt-4 max-w-lg">
        Hi there, this is tanc, welcome to my personal blog.
      </p>
      {
        SOCIALS.length > 0 && (
          <div class="mt-6 flex flex-col sm:flex-row sm:items-center">
            <div class="mr-2 mb-1 whitespace-nowrap sm:mb-0 text-sm text-accent-secondary">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-10 pb-6">
            <h2 class="text-xl font-medium tracking-tight">
              Featured
            </h2>
            <ul class="mt-4">
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-10 pb-6">
          <h2 class="text-xl font-medium tracking-tight">
            Recent Posts
          </h2>
          <ul class="mt-4">
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && (
                  <Card variant="h3" {...data} />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="my-10 text-center">
      <LinkButton href="/posts/" class="inline-flex items-center px-4 py-2 text-sm border border-border rounded hover:bg-muted transition-colors">
        All Posts
        <IconArrowRight class="inline-block ml-2" width={14} height={14} />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
